<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>utf-8</charset>
            <Pattern>[%p] %c - %m%n</Pattern>
        </encoder>
    </appender>
    <logger name="com.chrisbaileydeveloper.bookshelf" level="DEBUG"/>
    <logger name="org.hibernate.ejb.HibernatePersistence" level="OFF"/>
    <logger name="org.apache.catalina.startup.DigesterFactory" level="OFF"/>
    <logger name="io.netty" level="INFO"/>
    <logger name="org.jboss.netty.channel.socket.nio" level="INFO"/>
    <logger name="org.apache.spark" level="ERROR"/>
    <logger name="org.apache.hadoop" level="ERROR"/>
    <logger name="org.spark-project.jetty" level="ERROR"/>
    <logger name="com.github.fommil.netlib" level="ERROR"/>
    <logger name="org.apache.parquet.hadoop" level="ERROR"/>
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
